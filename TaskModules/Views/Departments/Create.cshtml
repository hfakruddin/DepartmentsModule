@* @model TaskModules.Models.DepartmentViewModel *@
@model TaskModules.Models.CreateDeptModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function disableparent() {
        alert('In);
        const checkbox = document.getElementById("IsRootDept");
        const parentbox = document.getElementById("ParentDeptID");
        alert(checkbox.checked);
        if (checkbox.checked) {
            parentbox.Disabled = true;
    }
</script>
<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentName"  class="control-label"></label>
                <input asp-for="DepartmentName" name="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentLogo" class="control-label"></label>
                <input asp-for="DepartmentLogo" type="file" accept=".jpg, .png" name="DepartmentLogo" class="form-control" />
                <span asp-validation-for="DepartmentLogo" class="text-danger"></span>
            </div>

            <div class="form-group">                
                <label asp-for="ParentDeptID" class="control-label"></label>       
                <select  asp-for="ParentDeptID" class="form-control">
                    @*@foreach (var department in Model.ParentDepartment)
                    {
                        <option value="@department.DepartmentId">@department.DepartmentName</option>
                    }*@
                     @foreach (var department in Model.AvailableDepartments)
                     {
                         <option value="@department.Value">@department.Text</option>
                     }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
